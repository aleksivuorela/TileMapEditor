<Window x:Class="TileMapEditor.MapDimensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileMapEditor"
        mc:Ignorable="d"
        Title="New Map" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Map size" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Width:" Margin="0,0,13,0"/>
                <TextBox Text="10" Name="txtWidth" Margin="0,0,3,0" Width="30"/>
                <TextBlock Text="(tiles)"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Height:" Margin="0,0,10,0"/>
                <TextBox Text="10" Name="txtHeight" Margin="0,0,3,0" Width="30"/>
                <TextBlock Text="(tiles)"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnOk" Content="Ok" Margin="0,10,10,0" Height="20" Width="60" Click="btnOk_Click"/>
                <Button Name="btnCancel" Content="Cancel" Margin="0,10,10,0" Height="20" Width="60" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
